##Add_Bill
CREATE OR REPLACE FUNCTION Add_Bill()
RETURNS TRIGGER AS $$
BEGIN
    INSERT INTO Bill (Status_Bill, Date_Order, Time_Order, ID_Customer)
    VALUES (FALSE, CURRENT_DATE, CURRENT_TIME, NEW.ID_Customer);
    RETURN NEW;
END;
$$ LANGUAGE plpgsql;

CREATE TRIGGER Trigger_AddBill
AFTER INSERT ON Customer
FOR EACH ROW
EXECUTE FUNCTION Add_Bill();
